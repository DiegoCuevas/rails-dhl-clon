<h2>Top Senders By Packages Sent</h2>

<% if @senders%>
  <table style="margin-left: auto; margin-right: auto;">
    <thead>
      <tr>
        <th>Sender Email</th>
        <th>Total Packages Sent</th>
      </tr>
    </thead>
  <tbody>
  <% @senders.each do |key, value| %>
      <tr>
      <td><%= key.to_s %></td>
      <td><%= value.to_s %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<%else%>
    <p><span style="color: #ff0000;">No data to show</span></p>
<% end %>

<%= link_to '<button type="button">Back</button>'.html_safe, sales_admin_shipments_path %>